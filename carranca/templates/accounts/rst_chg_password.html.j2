{# rst_chg_password.html.j2 (mgd) #}

{% extends "./layouts/form.html.j2" %}

{% block frm_blc_above %}
    {% if success %}
    <div class="d-grid">
    <button type="button" class="btn formMainBtn"
        onclick="window.location.href='{{ public_route('login') }}'">{{ rst_chgPwSuccessBtn }}</button>
    </div>
    {% endif %}
{% endblock frm_blc_above %}


{% block frm_blc_content %}
    {% if not msgSuccess %} {# `show msg error and` +  `display this block` if (msgError or not msgSuccess) else #}
        <!-- { New Password -->
        <div class="form-group">
            <label class="formLabel" inert for="pwdCreate">{{ newPasswordLabel }}</label>
            <div class="input-group">
                <span class="input-group-text">
                    <span class="fas fa-unlock-alt"></span>
                </span>
                {{ form.password(class="form-control", id="pwdCreate") }}
            </div>
        </div>
        <!-- New Password } -->

        <!-- { Repeat Password -->
        <div class="form-group mt-3">
            <label class="formLabel" inert for="pwdConfirm">{{ confirmNewPasswordLabel }}</label>
            <div class="input-group">
                <span class="input-group-text">
                    <span class="fas fa-unlock-alt"></span>
                </span>
                {{ form.confirm_password(class="form-control", id="pwdConfirm") }}
        </div>
        </div>
        <!-- Repeat Password } -->
    {% endif %}
{% endblock frm_blc_content %}
{# eof #}