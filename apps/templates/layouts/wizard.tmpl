{# files are relative to ./templates #}
{% extends "layouts/base-refloresta.tmpl" %}

{% block wizardPageTitle %}{{ pageTitle }}{% endblock %}


{% block content %}
   {% include 'includes/navigation.html' %}

   {# Wizard Template
      version 0.7
      2022.12.22--24
      Miguel Gastelumendi -- mgd
      https://jinja.palletsprojects.com/en/3.1.x/templates/
    #}

   {# The `block wizardBody` is inside #}
   <!-- ==== Wizard ==== -->
   <div class="wzdBackdrop">

      <!-- ==== Container ==== -->
      <div class="wzdContainer container">

         <!-- Header -->
         <div class="wzdHeader">
            <table>
            <tr>
               <td class="wzdLogo"></td>
               <td>
                  <h6 id="wzdDescription" class="alert-heading">
                  {% block wizardDescription %} {{ wzdDescription }} {% endblock %}
                  </h6>
                  <div id="wzdInstructions">
                  {% block wizardInstructions %} {{ wzdInstructions }} {% endblock %}
                  </div>
               </td>
            </tr>
            </table>
         </div>
         <!-- Header end -->

         <!-- Body -->
         <div id="idWzdBody" class="wzdBody">

         <!-- === User Area === -->
         {% block wizardBody %}

         {% endblock wizardBody %}
         <!-- === User Area end === -->

         </div>
         <!-- Body end -->

         <!-- Footer -->
         <div class="wzdFooter">
            <div id= "idWzdUsDisplay" class="wzdUsDisplay visually-hidden"></div>
            <button id="idWzdBtnHelp" class="wzdBtnHelp btn btn-outline-info" type="button" disabled= "true" onclick="wzdControl.help();">Ajuda</button>
            {#  Se mudar caption do botão, mudar também nas instruções de apps\templates\home\rsp-projectStart.html #}
            <button id="idWzdBtnOk" class="wzdBtnNext btn btn-outline-primary" type="button" disabled= "true" onclick="wzdControl.gotoNextPage();">Próximo</button>
         </div>
         <!-- Footer end -->

      </div>
      <!-- ==== Container end ==== -->
   </div>
   <!-- ==== Wizard end ==== -->
{% endblock content %}

{% block htmlHelpers %}
   {% include 'includes/modal.html' %}
{% endblock htmlHelpers %}

{% block javascripts %}
   <script src="/static/assets/js/wizard.js"></script>
{% endblock javascripts %}

